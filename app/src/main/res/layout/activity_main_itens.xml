<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">
                <!-- Logo do time mandante !-->
                <ImageView
                    android:id="@+id/ivTimeMan"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="15dp"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="2dp"/>
                <!-- Sigla do time mandante !-->
                <TextView
                    android:id="@+id/tvSigTimeMan"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="MAN" />
                <!-- Placar do time mandante !-->
                <TextView
                    android:id="@+id/tvPlTimeMan"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="0" />
                <!--  X !-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=" x " />
                <!-- Placar do time visitante !-->
                <TextView
                    android:id="@+id/tvPlTimeVis"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="0" />
                <!-- Sigla do time visitante !-->
                <TextView
                    android:id="@+id/tvSigTimeVis"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="VIS" />
                <!-- Logo do time visitante !-->
                <ImageView
                    android:id="@+id/ivTimeVis"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="15dp"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="2dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>